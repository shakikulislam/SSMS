@model List<SSMS.Models.Models.Product>

<style>
    table {
        border-collapse: collapse;
    }

    table, td, th {
        border: 1px solid black;
    }
</style>

<div class="panel panel-primary">
    <div class="panel-heading">Product Details</div>
    <div class="panel-body">

        @if (Model != null && Model.Count >= 0)
        {
            var sl = 0;
            <table class="table table-bordered table-hover">
                <tr id="tableHeader">

                    <th>SL</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>ReorderLevel</th>
                    <th>Description</th>
                    <th>Images</th>
                    <th>Action</th>

                </tr>
                @foreach (var aProduct in Model)
                {
                    <tr>

                        <td>@(++sl)</td>
                        <td>@aProduct.Code</td>
                        <td>@aProduct.Name</td>
                        <td>@aProduct.Category.Name</td>
                        <td>@aProduct.ReorderLevel</td>
                        <td>@aProduct.Description</td>
                        <td>

                            @{
                    if (aProduct.Image != null)
                    {

                        var file = Convert.ToBase64String(aProduct.Image);
                        var image = string.Format("data:image/gif; base64,{0}", file);
                        <img src="@image" width="50" height="50" />
                    }
                    else
                    {
                        <p>No Image</p>
                    }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit,", "Update", "Products", new { code = aProduct.Code }, new { @target = "_blank" })
                            @Html.ActionLink("Delete", "Delete", "Products", new { code = aProduct.Code }, new { @target = "_blank" })

                        </td>

                    </tr>
                }

            </table>
        }
    </div>
    <div class="panel-footer">Page Number (Upcomming)</div>
</div>
