@model SSMS.Models.Models.Sale
@*@model SSMS.Models.Models.Customer*@


@using (Html.BeginForm("Create", "Sales", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Customer</div>
                </div>
                <div class="panel-body">

                    <div class="form-group row">
                        @Html.LabelFor(c => c.CustomerName, "Customer Name *", new {@class = "control-label col-md-4"})
                        <div class="col-md-4">
                            <select name="CustomerName" id="CustomerName" class="control-label col-md-4">
                                @{

                                    <option  selected>--Select--</option>

                                    foreach (var product in ViewBag.Products)
                                    {
                                        <option value="@product.Name"
                                                            
                                                data-desc="@product.LoyalityPoint">
                                            @product.Name
                                        </option>
                                    }
                                }
                            </select>

                        </div>
                        @*<tr><td>@Html.DropDownListFor(c => c.CategoryId, Model.CategoryLookUp, new { @class = "form-control" })</td></tr>*@

                        @*@Html.DropDownList("drpProducts",
