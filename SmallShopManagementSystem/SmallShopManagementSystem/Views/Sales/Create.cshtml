                            "---Select---",
                            new { @class = "form-control" ,})*@

                        <div class="col-md-4">
                           
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(c => c.Date, "Date *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            
                            
                           @Html.TextBoxFor(c => c.Date, null, new { @class = "form-control" })
                          
                           
                          
                        
                            </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(c => c.LoyalityPoint, "Loyality Point *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(c => c.LoyalityPoint, null, new { @class = "form-control", id = "txtProductDescription" })
                        </div>
                    </div>


                    @*<div class="form-group row">
                        @Html.LabelFor(c => c.Date, "Purchase Date *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(c => c.Date, null, new { @class = "form-control" })
                        </div>
                    </div>*@

                </div>
            </div>
        </div>


        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Sales Details</div>
                </div>
                <div class="panel-body">
                    <div class="form-group row">
                        @Html.Label("ProductName", "Product Name *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("ProductName", null, new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group row">
                        @Html.Label("AvailableQuantity", "Available Quantity *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("AvailableQuantity", null, new { @class = "form-control" })
                        </div>
                    </div>
                    
                    
                    <div class="form-group row">
                        @Html.Label("Quantity", "Quantity *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("Qty", null, new { @class = "form-control" })
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        @Html.Label("UnitPrice", "Unit Price *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("UnitPrice", null, new { @class = "form-control" })
                        </div>
                    </div>

                    @*<div class="form-group row">
                        @Html.Label("TotalPrice", "Total Price *", new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("TotalPrice", null, new { @class = "form-control" })
                        </div>
                    </div>*@


                    <div class="col-md-4 col-md-offset-4">
                        <input type="button" class="btn btn-info" id="AddButton" value="Add" />
                    </div>

                </div>
            </div>
        </div>


        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Added Purchase Details Items</div>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-hover table-striped table-responsive">

                        <thead>
                            <tr style="background-color: skyblue; color: white; font-weight: bold">
                                <td>Sl</td>
                                <td>Product</td>
                                <td>Available Quantity</td>
                                <td>Quantity</td>
                                <td>Unit Price</td>
                                <td>Total Price</td>
                            </tr>
                        </thead>
                        <tbody id="PurchaseDetailsTable">

                            @if (Model != null && Model.PurchaseDetailses != null && Model.PurchaseDetailses.Count > 0)
                            {
                                var sl = 0;
